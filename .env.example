# ============================
# Basic App Configuration
# ============================
PROCESS_ID=0
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# ============================
# Database
# ============================
DB=your_database_name
DB_PASSWORD=your_database_password

# ============================
# Authentication & Security
# ============================
SALT=12
JWT_SECRET=your_jwt_secret
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7
PASSWORD_RESET_OTP_EXPIRES_AT=600000  # in milliseconds (e.g., 10 minutes)

# ============================
# Email Configuration
# ============================
EMAIL_HOST=smtp.mailprovider.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password

SENDGRID_USERNAME=your_sendgrid_username
SENDGRID_PASSWORD=your_sendgrid_password

# ============================
# Redis Configuration
# ============================
REDIS_USERNAME=default
REDIS_PASSWORD=your_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379

# Heartbeat & Socket Settings
SOCKET_GRACE_PERIOD=10000        # ms before socket is considered disconnected
HEARTBEAT_KEY_EXPIRES_IN=15000   # ms before considering user offline

# ============================
# Cloudinary Configuration
# ============================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_CLOUD_API_KEY=your_api_key
CLOUDINARY_CLOUD_API_SECRET=your_api_secret

# ============================
# GenAI Configuration
# ============================
GEMINI_API_KEY=your_genai_api_key
GENAI_MODEL=gemini-pro

# ============================
# Kafka Configuration
# ============================
KAFKA_BROKER=broker:9092
KAFKA_MECHANISM=plain
KAFKA_USERNAME=your_kafka_username
KAFKA_PASSWORD=your_kafka_password
